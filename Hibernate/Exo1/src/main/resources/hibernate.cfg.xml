<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-configuration PUBLIC
        "-//Hibernate/Hibernate Configuration DTD//EN"
        "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">

<hibernate-configuration>

    <!-- a SessionFactory instance listed as /jndi/name -->
    <session-factory>

        <mapping class="service.ProductService"></mapping>
        <mapping class="entity.Product"></mapping>
        <mapping class="dao.ProductDao"></mapping>
        <mapping class="interfaces.Repository"></mapping>
        <mapping class="controller.IHM"></mapping>
        <mapping class="entity.Image"></mapping>
        <mapping class="entity.Comments"></mapping>
        <mapping class="entity.Orders"></mapping>
        <mapping class="entity.Adress"></mapping>


    </session-factory>

</hibernate-configuration>